@model FlowerShop.Models.ProductCategory
@*dùng cho 1 bản ghi*@
@{
    ViewBag.Title = "Thêm mới danh mục";
}
@{
    Layout = "_Layout";
}

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="@Url.Action("Add", "Category", new { area = "Admin" })" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm mới danh mục</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Danh mục</a></li>
                        <li class="breadcrumb-item active">Thêm mới</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Thông tin thêm mới danh mục</h3>

                
            </div>
            <div class="card-body">
                <div class="bs-stepper-content">
                    @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { }))

                    {
                        @Html.AntiForgeryToken();
                        @Html.ValidationSummary(true)
                        <!-- your steps content here -->
                        <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên danh mục</label>
                               @Html.TextBoxFor(x => x.ProductCategoryName, new {@class="form-control",@placeholder="Tên danh mục"})
                                @Html.ValidationMessageFor(x => x.ProductCategoryName, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label for="Status">Trạng thái</label>
                                @Html.DropDownListFor(x => x.Status,
                                new List<SelectListItem>
                                                        {
                                                        new SelectListItem { Text = "Kích hoạt", Value = "1" },
                                                        new SelectListItem { Text = "Ẩn", Value = "0" }
                                                        },
                                                        new { @class = "form-control" })
                        </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">Mô tả</label>
                               @Html.TextAreaFor(x => x.ProductCategoryDescription, new {@class="form-control"})
                            </div>
                            <div class="form-group">

                            <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="btn btn-danger">Quay lại</a>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                          
                        </div>    
 
                    }
                  
                </div>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>